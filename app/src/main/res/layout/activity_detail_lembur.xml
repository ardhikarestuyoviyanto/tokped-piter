<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.lembur.DetailLemburActivity">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins"
                android:textSize="13sp"
                android:text="Anda dapat mengupdate data lembur yang telah anda inputkan jika masih terdapat kesalahan input."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:id="@+id/lembur_form"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="225dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:gravity="start"
                    android:text="Tanggal"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tanggal"
                    android:windowSoftInputMode="stateHidden"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border_form_input"
                    android:hint="Pilih Tanggal Lembur"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:importantForAutofill="no" />

                <TextView
                    android:layout_width="225dp"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:gravity="start"
                    android:text="Jam Mulai"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/jam_mulai"
                    android:windowSoftInputMode="stateHidden"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border_form_input"
                    android:hint="Pilih Jam Mulai"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:importantForAutofill="no" />

                <TextView
                    android:layout_width="225dp"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:gravity="start"
                    android:text="Jam Selesai"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/jam_selesai"
                    android:windowSoftInputMode="stateHidden"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border_form_input"
                    android:hint="Pilih Jam Selesai"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:importantForAutofill="no" />

                <TextView
                    android:layout_width="225dp"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:gravity="start"
                    android:text="Kegiatan"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/kegiatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border_form_input"
                    android:hint="Ceritakan Kegiatan Lembur Anda"
                    android:lines="5"
                    android:gravity="top|left"
                    android:inputType="textMultiLine|textCapWords"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:importantForAutofill="no" />

                <Button
                    android:id="@+id/bukti"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/border_upload_file"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Upload Bukti Lembur"
                    android:textAllCaps="false"
                    android:textColor="@color/primary_button"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/bukti_prev"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/primary"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="19"
                    android:text="Lihat Bukti Lembur Lama"
                    android:fontFamily="@font/poppins"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/button_submit"
                    android:background="@drawable/border_button_normal"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Update Lembur"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>