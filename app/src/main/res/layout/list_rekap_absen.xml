<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tanggal"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="-"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DDDDDD"
                android:padding="5dp"
                android:layout_marginTop="12dp"
                >

                <TextView
                    android:fontFamily="@font/poppins"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Absen Masuk"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=":"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/absen_masuk"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/black"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="19"
                    android:text="-"
                    tools:ignore="HardcodedText" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="5dp"
                >

                <TextView
                    android:fontFamily="@font/poppins"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Absen Pulang"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=":"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/absen_pulang"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/black"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="19"
                    android:text="-"
                    tools:ignore="HardcodedText" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DDDDDD"
                android:padding="5dp"
                >
                <TextView
                    android:fontFamily="@font/poppins"
                    android:textStyle="bold"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="TL Kode"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=":"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/kode_tl"
                    android:textColor="@color/black"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="19"
                    android:text="-"
                    tools:ignore="HardcodedText" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="5dp"
                >

                <TextView
                    android:fontFamily="@font/poppins"
                    android:textStyle="bold"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="PSW Kode"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=":"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/kode_psw"
                    android:textColor="@color/black"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="19"
                    android:text="-"
                    tools:ignore="HardcodedText" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DDDDDD"
                android:padding="5dp"
                >

                <TextView
                    android:fontFamily="@font/poppins"
                    android:textStyle="bold"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Potongan TK"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=":"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/potongan_total"
                    android:textColor="@color/black"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="19"
                    android:text="-"
                    tools:ignore="HardcodedText" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="5dp"
                >

                <TextView
                    android:fontFamily="@font/poppins"
                    android:textStyle="bold"
                    android:layout_width="93dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Foto"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=":"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/foto_masuk"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/primary"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Masuk"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/foto_pulang"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/success"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="15"
                    android:text="Pulang"
                    tools:ignore="HardcodedText" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DDDDDD"
                android:padding="5dp"
                >

                <TextView
                    android:fontFamily="@font/poppins"
                    android:textStyle="bold"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Keterangan"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=":"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/keterangan"
                    android:textColor="@color/black"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="19"
                    android:text="-"
                    tools:ignore="HardcodedText" />

            </TableRow>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>